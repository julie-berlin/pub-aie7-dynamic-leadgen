# Development Dockerfile for Dynamic Survey API
FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install uv package manager
RUN pip install uv

# Set working directory
WORKDIR /app

# Copy dependency files and backend structure first
COPY pyproject.toml uv.lock ./
COPY backend/ ./backend/

# Install dependencies
RUN uv sync --frozen

# Set environment variables - PATH must be set properly
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PATH="/app/.venv/bin:${PATH}"

# Copy all backend code to the working directory after install
RUN cp -r backend/* . && rm -rf backend/

# Create necessary directories
RUN mkdir -p /app/logs /app/data/cache

# Expose port
EXPOSE 8000

# Development command with hot reload
CMD ["/app/.venv/bin/uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload", "--log-level", "debug"]